<h1 id='create_title'>Create Crime Report</h1>
<div class="row">
<div class='col-md-6'>
<%= form_for @crime_report, class: 'col-md-6', id: 'crime-form' do |f| %>
<div class = "form-group">
  <%= f.label :address %>:
  <%= f.text_field :address, placeholder: "# Street name", class: 'form-control address-label' %><br />
</div>
<div class = "form-group">
  <%= f.label :phonenumber %>:
  <%= f.text_field :phonenumber, placeholder: "# Phone Number", class: 'form-control address-label' %><br />
</div>
<div class="actions">
  <%= f.submit "Check for Crime", class: 'btn btn-success' %>
</div>
<% end %>
</div>

<div class='col-md-6'>
<img src="http://www.thedrinksbusiness.com/wordpress/wp-content/uploads/archive/images/stories/FWOT_pics/05_26_2011/burglar.jpg" style = "hieght:100%; width:100%; align:center"/>
</div>
</div>
